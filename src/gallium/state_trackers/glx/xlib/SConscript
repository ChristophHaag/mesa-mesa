#######################################################################
# SConscript for xlib state_tracker

Import('*')

if not env['x11']:
    Return()

env = env.Clone()

env.Append(CPPPATH = [
    '#/src/mapi',
    '#/src/mesa',
    '#/src/mesa/main',
])

st_xlib = env.ConvenienceLibrary(
target = 'st_xlib',
source = [
    'glx_api.c',
    'glx_getproc.c',
    'glx_usefont.c',
    'xm_api.c',
    'xm_st.c',
    ]
)
Export('st_xlib')
