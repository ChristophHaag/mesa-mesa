Import('*')

try:
    graw
except NameError:
    print 'warning: graw library not avaiable: skipping build of graw test'
    Return()

env = env.Clone()

env.Prepend(LIBPATH = [graw.dir])
env.Prepend(LIBS = ['graw'] + gallium)

progs = [
    'clear',
    'tri',
    'quad-tex',
    'fs-test',
    'vs-test',
    'gs-test',
    'tri-gs',
    'quad-sample',
]

for prog in progs:
    env.Program(
        target = prog,
        source = prog + '.c',
    )

